    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "resolveJsonModule": true
  },
  "lib": ["es2016"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
